    <LinearLayout
        android:id="@+id/div_nm_det_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="-59dp"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_title_product_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="bottom|center"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="16sp"
            tools:text="@string/item_title" />

        <TableRow
            android:id="@+id/hr_product_order"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/place_autocomplete_search_hint"></TableRow>
    </LinearLayout>
    <!--TextView
        android:id="@+id/list_title_product_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="-59dp"
        android:layout_gravity="left|center"
        android:gravity="bottom|center"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textSize="16sp"
        tools:text="@string/item_title" /-->

    <!--TableRow
        android:id="@+id/hr_product_order"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:background="@color/place_autocomplete_search_hint">
    </TableRow-->

    <LinearLayout
        android:id="@+id/div_qnt_product_order"
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblqnt_product_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/qnt"
            android:textColor="@color/button_grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_qnt_product_order"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_valor_product_order"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblValue_product_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/valor"
            android:textColor="@color/button_grey"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_desc_product_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="R$0,00"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>