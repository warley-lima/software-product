<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/div_product_order_list"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_avatar_product_order"
        android:layout_width="@dimen/logo_size_w"
        android:layout_height="@dimen/avator_size"
        android:contentDescription="@string/logoapp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_nativa" />

    <!--TextView
        android:id="@+id/list_title_product_order"
        android:layout_width="wrap_content"
