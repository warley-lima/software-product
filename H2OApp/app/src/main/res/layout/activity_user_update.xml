<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_user_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context="com.gs.h2oapp.Action.UserUpdateActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_adress_up_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

        <LinearLayout
            android:id="@+id/div_header_user_updt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical">

            <include
                layout="@layout/my_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
        </LinearLayout>

        <!--include
            layout="@layout/my_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp" /-->

        <LinearLayout
            android:id="@+id/div_updt_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <include layout="@layout/content_update_user" />
        </LinearLayout>


        <!--include layout="@layout/content_update_adress" /-->

        <include
            layout="@layout/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_user_up_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_nav_adress"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

