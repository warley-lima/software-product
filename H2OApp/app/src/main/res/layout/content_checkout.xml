    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:requiresFadingEdge="none|horizontal"
            app:hintAnimationEnabled="false"
            app:hintEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="@string/hint_name"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_fone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_fone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:hint="@string/hint_fone"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_number"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_complemento"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="-58dp"
            android:background="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_complemento"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/hint_complemento"
                android:inputType="textEmailAddress|textMultiLine"
                android:lines="10"
                android:minLines="1"
                android:paddingRight="5dp"
                android:scrollHorizontally="false"
                android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="top|left"
                android:hint="@string/hint_adress"
                android:inputType="text|textMultiLine"
                android:lines="3"
                android:minLines="1"
                android:paddingRight="5dp"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_bairro_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_bairro_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="top|left"
                android:hint="@string/hint_bairro_city"
                android:inputType="text|textMultiLine"
                android:lines="3"
                android:minLines="1"
                android:paddingRight="5dp"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"

                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" />
        </android.support.design.widget.TextInputLayout>

        <!--Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:text="@string/btn_confirmar"
            android:textColor="@android:color/white"
            android:theme="@style/AppTheme.NoActionBar" /-->

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
