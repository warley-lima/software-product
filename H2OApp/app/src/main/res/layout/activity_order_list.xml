<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context="com.gs.h2oapp.Action.OrderListActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6FA">

        <LinearLayout
            android:id="@+id/div_header_orders"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical">

            <include
                layout="@layout/my_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_list_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn_save_end"
                android:layout_below="@+id/div_total_order"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <include
            layout="@layout/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_orders"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:label="@string/ac_company_name"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_nav_order">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
