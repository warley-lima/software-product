<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/div_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_img"
            android:layout_width="@dimen/logo_size_w"
            android:layout_height="@dimen/cast_intro_overlay_title_margin_top"
            android:contentDescription="@string/logoapp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_nativa" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_rem_prod"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="295dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="-99dp"
        android:clickable="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnRemCart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:contentDescription="@string/img_add_cart"
            app:srcCompat="@drawable/ic_cancel_grey_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_nm_close"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:gravity="bottom|center"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="16sp"
            tools:text="@string/item_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_valor_item"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_valor"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="16sp" />
    </LinearLayout>

    <!--LinearLayout
        android:id="@+id/div_rem_item"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginLeft="175dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="-50dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnRemItemCart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:contentDescription="@string/img_add_cart"
            app:srcCompat="@drawable/ic_minus_24" />
    </LinearLayout-->
    <LinearLayout
        android:id="@+id/div_rem_item"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="-30dp"
        android:clickable="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnRemItemCart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:contentDescription="@string/img_add_cart"
            app:srcCompat="@drawable/ic_minus_orange_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_quantidade"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="240dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="-30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/button_grey"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/div_add_item"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="295dp"
        android:layout_marginStart="295dp"
        android:layout_marginTop="-32dp"
        android:clickable="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnAddtemCart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:contentDescription="@string/img_add_cart"
            app:srcCompat="@drawable/ic_positive_blue_24" />
    </LinearLayout>

    <!--TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:background="@color/place_autocomplete_search_hint"></TableRow-->


</LinearLayout>