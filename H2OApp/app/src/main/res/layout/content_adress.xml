<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gs.h2oapp.Action.AdressActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrool_gerais_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/divGeraisAdress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/div_name_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:gravity="top"
                    android:nextFocusDown="@+id/input_cep"
                    android:nextFocusForward="@+id/input_cep"
                    android:scrollbars="vertical"
                    app:hintEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_name_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_name"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_cep_num_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cep"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:nextFocusDown="@+id/input_number_adress"
                    android:nextFocusForward="@+id/input_number_adress"
                    android:nextFocusLeft="@+id/input_number_adress"
                    android:nextFocusRight="@+id/input_number_adress"
                    android:nextFocusUp="@+id/input_name_user">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_cep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_cep"
                        android:inputType="number"
                        android:nextFocusDown="@+id/input_number_adress"
                        android:nextFocusForward="@+id/input_number_adress"
                        android:nextFocusLeft="@+id/input_number_adress"
                        android:nextFocusRight="@+id/input_number_adress" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_number_adress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195dp"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="-58dp"
                    android:background="#FFFFFF"
                    android:nextFocusDown="@+id/input_adress_adress"
                    android:nextFocusForward="@+id/input_adress_adress"
                    android:nextFocusUp="@+id/input_cep">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_number_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_number"
                        android:inputType="number"
                        android:nextFocusDown="@+id/input_adress_adress"
                        android:nextFocusForward="@+id/input_adress_adress"
                        android:nextFocusLeft="@+id/input_adress_adress"
                        android:nextFocusRight="@+id/input_adress_adress" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_adress_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:nextFocusUp="@+id/input_number_adress"
                    android:nextFocusDown="@+id/input_bairro_adress"
                    android:nextFocusForward="@+id/input_bairro_adress">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_adress_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/hint_adress"
                        android:inputType="text"
                        android:lines="3"
                        android:minLines="1"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_bairro_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:nextFocusUp="@+id/input_adress_adress"
                    android:nextFocusDown="@+id/input_cidade_adress"
                    android:nextFocusForward="@+id/input_cidade_adress">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_bairro_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/hint_bairro"
                        android:inputType="text"
                        android:lines="3"
                        android:minLines="1"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_cidade_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:nextFocusDown="@+id/input_fone_user"
                    android:nextFocusForward="@+id/input_fone_user"
                    android:nextFocusUp="@+id/input_bairro_adress">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_cidade_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/hint_cidade"
                        android:inputType="text"
                        android:lines="3"
                        android:minLines="1"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_complemento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_complemento_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:gravity="top"
                    android:scrollbars="vertical">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_complemento_adress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="@string/hint_complemento"
                        android:inputType="text|textMultiLine"
                        android:lines="3"
                        android:minLines="1"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_bnt_adress"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_cadastrar_adress"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:text="@string/btn_cadastrar"
                    android:textColor="@android:color/white"
                    android:theme="@style/AppTheme.NoActionBar" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <include
        layout="@layout/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</android.support.design.widget.CoordinatorLayout>
