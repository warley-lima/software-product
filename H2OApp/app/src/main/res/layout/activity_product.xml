<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context="com.gs.h2oapp.Action.ProductActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_prod_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/div_prod_header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical">

            <include
                layout="@layout/my_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_close_prod"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="295dp"
            android:layout_marginStart="295dp"
            android:layout_marginTop="45dp"
            android:clickable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCloseProd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:background="#ffffff"
                android:contentDescription="@string/img_add_cart"
                app:srcCompat="@drawable/ic_cancel_grey_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/div_img_prod"
                android:layout_width="250dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_prod"
                    android:layout_width="250dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/logoapp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_nativa" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/div_nm_prod"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="false"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="16sp"
                    tools:text="@string/item_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_desc_prod"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:singleLine="false"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="16sp"
                    tools:text="@string/item_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/div_valor_prod"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/valor_prod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textSize="20sp"
                    tools:text="@string/item_desc" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/div_add_prod"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnAddProdCart"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:contentDescription="@string/img_add_cart"
                    app:srcCompat="@drawable/ic_add_cart_48" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_prod_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_navigation" >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>