<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_adress_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context="com.gs.h2oapp.Action.AdressActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_adress_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

        <!--include
            layout="@layout/my_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp" /-->
        <LinearLayout
            android:id="@+id/div_header_adress"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical">

            <include
                layout="@layout/my_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/div_add_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <include layout="@layout/content_adress" />
        </LinearLayout>




    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_adress_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_nav_adress" >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
