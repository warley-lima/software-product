<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_products"
    android:label="@string/ac_products_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    tools:context="com.gs.h2oapp.Action.ProductsActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6FA">

        <LinearLayout
            android:id="@+id/div_header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical">

            <include
                layout="@layout/my_bar"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_nm_dist"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="50dp"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_dist"
                style="@style/Widget.AppCompat.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom|center"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textSize="20sp"
                app:fontFamily="sans-serif-smallcaps"
                tools:text="@string/item_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/div_list_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp"
            android:orientation="vertical">

            <include
                layout="@layout/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <include
            layout="@layout/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_products"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_navigation" >


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>